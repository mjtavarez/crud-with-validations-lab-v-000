<h2>Update <%= @song.title%> by <%=@song.artist_name%></h2>

<%= form_for @song do |f| %>
    <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %><br>
    </div>
    <div class="field">
        <%= f.label :release_year %>
        <%= f.number_field :release_year %><br>
    </div>
    <div class="field">
        <%= f.label :artist_name %>
        <%= f.text_field :artist_name %><br>
    </div>
    <div class="field">
        <%= f.label :genre %>
        <%= f.text_field :genre %><br>
    </div>
    <div class="field">
        <%= f.label :released %>
        <%= f.check_box :released %>
    </div>
    <%= submit_tag "Update" %>
    <br><br>
<% end %>

<%= link_to "Cancel Editing", @song %>